#include <iostream>

void shift( int N [],const int n, const int k)
{


    for (int i = 0; i <= n - 1; i++) std::cout << N[i] << ' ';

    std::cout << std::endl;

    if (k >= 0) {
        for (int o = 0; o < k; o++) {
            for (int i = n - 1; i >= 1; --i)
            {
                int t;
                t = N[i - 1]; N[i - 1] = N[i]; N[i] = t;
            }
        }
    }
    else if (k < 0) {
        for (int o = n; o > k - 1; o--) {
            for (int i = 0; i < n - 1; ++i)
            {
                int t;
                t = N[i]; N[i] = N[i + 1]; N[i + 1] = t;
            }


        }
    }


    for (int i = 0; i <= n - 1; ++i)
    {
        std::cout << N[i] << ' ';
    }
}

int main() {
    int N[10];
    for (int i = 0; i < 10; ++i) {
        N[i] = i;
    }
    shift(N,10, 3);

}
